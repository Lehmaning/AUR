[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = [^(nvml-fix)]*

[Action]
Description = Re-Applying nvml_fix...
When = PostTransaction
Exec = /bin/sh -c "rm /usr/lib/libnvidia-ml.so.1 && ln -s /usr/lib/libnvidia-ml.so.1.fix /usr/lib/libnvidia-ml.so.1"
NeedsTargets
